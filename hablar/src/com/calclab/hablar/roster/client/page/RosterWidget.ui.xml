<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:r="urn:import:com.calclab.hablar.roster.client.page">
    <ui:style type="com.calclab.hablar.roster.client.page.RosterWidget.ActionItemStyle">
	    .actionWidget {
	    	float: left;
		    padding: 2px 2px;
		    -moz-border-radius: 5px;
		    -webkit-border-radius: 5px;
		    cursor: pointer;
		    background-position: center;
	    }
    </ui:style>
    <g:LayoutPanel ui:field="roster" addStyleNames="hablar-RosterWidget hablar-Page hablar-lightBackground">
        <!--  Actions -->
        <g:layer left="0" top="0" width="100%" height="20px">
            <g:FlowPanel ui:field="actions" addStyleNames="actions">
            </g:FlowPanel>
        </g:layer>
        <!-- Results -->
        <g:layer left="0" top="20px" width="100%" bottom="0px">
            <g:ScrollPanel ui:field="scroll" height="100%"
                addStyleNames="scroll hablar-clearBackground">
                <r:RosterListWidget addStyleNames="list" ui:field="list">
                </r:RosterListWidget>
            </g:ScrollPanel>
        </g:layer>
        <!-- Inactive -->
        <g:layer left="0" top="20px" width="100%" height="0px">
            <g:FlowPanel addStyleNames="disabledPanel hablar-defaultBackground" ui:field="disabledPanel">
                <g:Label ui:field="disabledLabel" />
            </g:FlowPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>