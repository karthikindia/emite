<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel styleName="hablar-OpenChatWidget">
		<div class="form">
			<h2>Add contact to groups</h2>
			<p>
				<label>Contact:</label>
				<g:Label ui:field="contact"></g:Label>
			</p>
			<p>
				<g:RadioButton ui:field="existingGroup" name="groupAction">To a
					existing group</g:RadioButton>
				<span class="option">
					<label>Select Group:</label>
					<g:ListBox ui:field="groupList" visibleItemCount="4"></g:ListBox>
				</span>
			</p>
			<p>
				<g:RadioButton ui:field="newGroup" name="groupAction">To a new group</g:RadioButton>
				<span class="option">
					<label>New Group name:</label>
					<g:TextBox ui:field="newGroupName"></g:TextBox>
					<g:Label ui:field="groupNameError" styleName="error"></g:Label>
				</span>
			</p>
			<div class="actions">
				<g:Button ui:field="accept">Add to Group</g:Button>
				<g:Button ui:field="cancel">Cancel</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 