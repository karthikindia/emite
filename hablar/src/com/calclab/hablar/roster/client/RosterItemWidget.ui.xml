<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style src="NiHablar.css" field="hablar" />


	<ui:style >
		
		.user {
			width: 100%;
			overflow: hidden;
		}
		
		.icon {
			display: block;
			float: left;
			margin: 2px 5px 2px 2px;
		}
		
		.name {
			display: block;
			float: left;
			cursor: pointer;
			margin-right: 5px;
		}
		
		.jid {
			float: left;
			display: block;
			color: #BBB;
		}
		
		.status {
			display: block;
			margin: 0 0 2px 25px;
			color: gray;
		}
		
	</ui:style>

	<g:FlowPanel styleName="{hablar.listItemWidget}">
		<g:FlowPanel styleName="{style.user}">
			<g:Label styleName="{style.icon}" ui:field="icon"></g:Label>
			<g:Label styleName="{style.name}" ui:field="name">name-here</g:Label>
			<g:Label styleName="{style.jid}" ui:field="jid">jid</g:Label>
			<g:Label ui:field="menu" styleName="{hablar.listItemMenu}"></g:Label>
		</g:FlowPanel>
		<g:Label styleName="{style.status}" ui:field="status" />
	</g:FlowPanel>
</ui:UiBinder> 