<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.item {
			height: 20px;
		}
		.status {
			margin-left: 20px;
			padding: 2px 0;
			color: gray;
		}
		.jid {
			color: gray;
		}

		.data {
			width: 100%;
			overflow: hidden;
		}
		.name {
			display: inline;
			float: left;
			padding-right: 5px;
		}
	</ui:style>
	<g:FocusPanel ui:field="self" addStyleNames="user">
		<g:FlowPanel addStyleNames="hablar-RosterItemWidget hablar-ListItem hablar-bottomLightBordered">
			<g:LayoutPanel addStyleNames="{style.item} item">
				<g:layer top="0" left="0" width="20px" height="16px">
					<g:Label addStyleNames="icon" ui:field="icon"></g:Label>
				</g:layer>
				<g:layer top="0" left="20px" height="16px" right="20px">
					<g:FlowPanel addStyleNames="{style.data}">
						<g:Label addStyleNames="{style.name} name" ui:field="name">name-here</g:Label>
						<g:Label addStyleNames="{style.jid} jid" ui:field="jid">jid</g:Label>
					</g:FlowPanel>
				</g:layer>
				<g:layer top="0" right="0" width="20px" height="16px">
					<g:Label ui:field="menu" addStyleNames="menu"></g:Label>
				</g:layer>
			</g:LayoutPanel>
			<g:Label addStyleNames="{style.status} status" ui:field="status" />
		</g:FlowPanel>
	</g:FocusPanel>
</ui:UiBinder>