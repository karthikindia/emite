<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @sprite .userAdd {
            gwt-image: 'buddy';
        }
    </ui:style>

    <ui:image field="buddy" src="buddy-small.png"></ui:image>

    <g:HTMLPanel addStyleNames="hablar-SearchResultItemWidget hablar-bottomLightBordered">
        <g:Label addStyleNames="icon {style.userAdd}" ui:field="buddyIcon"></g:Label>
        <g:Label ui:field="name" addStyleNames="name">Result</g:Label>
        <g:Label ui:field="jid" addStyleNames="jid">JID</g:Label>
        <g:Label ui:field="menu" addStyleNames="menu"></g:Label>
    </g:HTMLPanel>
</ui:UiBinder>