<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.searchControlsPanel {
		    width: 98%;
		    overflow: hidden;
		    padding-left: 2%;
		    padding-top: 7px;
		}
	</ui:style>
    <g:LayoutPanel ui:field="self" addStyleNames="hablar-Page hablar-SearchWidget hablar-lightBackground">
        <g:layer left="0" top="0" width="100%" height="0">
            <g:FlowPanel ui:field="messagePanel">
                <g:Label ui:field="message" addStyleNames="panel messadge">
                </g:Label>
            </g:FlowPanel>
        </g:layer>
        <g:layer left="0" top="0" right="0" bottom="47px">
            <g:ScrollPanel ui:field="scroll" height="100%" addStyleNames="scroll">
                <g:FlowPanel addStyleNames="list" ui:field="results" />
            </g:ScrollPanel>
        </g:layer>
        <g:layer left="0" bottom="0" width="100%" height="40px">
            <g:FlowPanel addStyleNames="{style.searchControlsPanel} hablar-highlightBackground">
                <g:TextBox ui:field="term" addStyleNames="searchBox" />
                <g:Button ui:field="search">Search</g:Button>
            </g:FlowPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>