<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel addStyleNames="hablar-CopyToClipboardWidget">
		<div class="form">
			<h2>
				<span ui:field='title' />
			</h2>
			<p>
			<label ui:field="useYourBrowserLabel">Use your browser's copy command to place this text into the clipboard</label>
				<g:TextArea ui:field="content"></g:TextArea>
			</p>
			<div class="actions hablar-topDefaultBordered">
				<g:Button ui:field="accept">Copy to clipboard</g:Button>
				<g:Button ui:field="cancel">Close</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>