<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with type="com.calclab.hablar.core.client.ui.icon.HablarIconsBundle" field="res"></ui:with>
  <ui:style>
	.status {
	    float: left;
	    margin-top: 3px;
	    padding: 2px;
	    width: 80%;
	}
  </ui:style>
  <g:HTMLPanel addStyleNames="hablar-PresenceWidget">
    <h2 class="hablar-bottomLightBordered">
		<span ui:field='title' />
    </h2>
    <div class="form">
      <p>
        <label ui:field="statusLabel">Status:</label>
        <div class="controls">
          <g:Image resource="{res.loadingIcon}" ui:field="icon" addStyleNames="icon" />
          <g:Image ui:field="menu" addStyleNames="menu" resource="{res.menuIcon}" />
          <g:TextBox ui:field="status" styleName="{style.status}" />
        </div>
      </p>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>