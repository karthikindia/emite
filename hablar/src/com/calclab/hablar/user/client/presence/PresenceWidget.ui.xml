<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>

  </ui:style>
  <g:HTMLPanel styleName="hablar-PresenceWidget">
    <h2>Your status</h2>
    <div class="form">
      <p>
        <label>Status:</label>
        <g:FlowPanel>
          <g:Label styleName="icon" ui:field="icon" />
          <g:Label ui:field="menu" styleName="menu" />
          <g:TextBox ui:field="status" addStyleNames="status gwt-TextBox" />
        </g:FlowPanel>
      </p>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>