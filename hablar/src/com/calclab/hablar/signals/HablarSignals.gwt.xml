<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.0.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="HablarSignals">
	<inherits name="com.google.gwt.user.User" />
	<inherits name='com.calclab.hablar.core.HablarCore' />
	<inherits name='com.calclab.hablar.chat.HablarChat' />
	<inherits name='com.calclab.hablar.rooms.HablarRooms' />
	<inherits name='com.calclab.hablar.user.HablarUser' />
	<inherits name='com.calclab.emite.xep.storage.EmitePrivateStorage' />
	<stylesheet src="jgrowl/jquery.jgrowl.css" />
	<script src="jgrowl/jquery-1.3.2.js" />
	<script src="jgrowl/jquery.jgrowl.js" />

	<!-- Fall back to the normal browser focus class -->
	<replace-with
		class="com.calclab.hablar.signals.client.browserfocus.BrowserFocus">
		<when-type-is
			class="com.calclab.hablar.signals.client.browserfocus.BrowserFocus" />
	</replace-with>

	<!--
		IE6 requires slightly different implementation for the window focus
		detection
	-->
	<replace-with
		class="com.calclab.hablar.signals.client.browserfocus.BrowserFocusIE6">
		<when-type-is
			class="com.calclab.hablar.signals.client.browserfocus.BrowserFocus" />
		<any>
			<when-property-is name="user.agent" value="ie6" />
		</any>
	</replace-with>

	<extend-property name="locale" values="it" />
	<extend-property name="locale" values="en" />

	<source path="client" />
	<entry-point class="com.calclab.hablar.signals.client.HablarSignals" />
</module>