<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:hablar="urn:import:com.calclab.hablar.basic.client.presence">

	<ui:style>
		.pages {
			background-color: white;
		}
		
		.status {
			color: gray;
			padding: 2px 5px;
			background-color: #e9e9e9;
		}
	</ui:style>

	<g:LayoutPanel ui:field="container">
		<g:layer left="0" top="0" right="0" height="20">
			<hablar:PresencePanel></hablar:PresencePanel>
		</g:layer>
		<g:layer left="0" bottom="0" right="0" height="20">
			<g:Label ui:field="status" styleName="{style.status}">Hablar</g:Label>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 