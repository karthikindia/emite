<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
     xmlns:hablar="urn:import:com.calclab.hablar.basic.client.ui.pages.panel">
    <ui:style>
        .accordion {
            background-color: #E9E9E9;
        }
    </ui:style>

    <ui:style field="headerStyle"
        type="com.calclab.hablar.basic.client.ui.pages.panel.AccordionPages.HeaderStyle">
            .requestFocus {
                color: #c00;
                font-weight: bold;
                border-bottom: 1px solid #BBBBBB;
                border-top: 1px solid white;
            }
            
            .open {
                border-bottom: 1px solid #BBBBBB;
                border-top: 1px solid white;
            }
            
            .closed {
                color: gray;
                border-bottom: 1px solid #BBBBBB;
                border-top: 1px solid white;
            }
        </ui:style>



    <hablar:AccordionPanel ui:field="accordion"
        styleName="{style.accordion}">
    </hablar:AccordionPanel>
</ui:UiBinder> 