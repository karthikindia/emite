<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel addStyleNames="hablar-OpenChatWidget">
		<div class="form">
			<h2>
				<span ui:field='title' />
			</h2>
			<p>
				<label ui:field="jabberIdLabel">Jabber ID:</label>
				<g:TextBox ui:field="jabberId"></g:TextBox>
				<g:Label ui:field="jabberIdError" addStyleNames="error"></g:Label>
			</p>
			<p><g:CheckBox ui:field="addToRoster">Add to roster</g:CheckBox></p>
			<div class="actions">
				<g:Button ui:field="accept">Open Chat</g:Button>
				<g:Button ui:field="cancel">Cancel</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>