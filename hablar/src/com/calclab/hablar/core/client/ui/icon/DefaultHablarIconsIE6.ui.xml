	<ui:style type="com.calclab.hablar.core.client.ui.icon.DefaultHablarIcons.Styles">
		.active {
			background-color: #EEEEEE;
		}
		
		.inactive {
			background-color: white;
		}
	</ui:style>

	<ui:style field="icons"
		type="com.calclab.hablar.core.client.ui.icon.DefaultHablarIcons.StyleIcons">
			@sprite .buddyIcon {
				gwt-image: 'buddy';
			}
			
			@sprite .buddyIconOn {
				gwt-image: 'buddyOn';
			}
			
			@sprite .buddyIconOff {
				gwt-image: 'buddyOff';
			}
			
			@sprite .buddyIconDnd {
				gwt-image: 'buddyDnd';
			}
			
			@sprite .buddyIconWait {
				gwt-image: 'buddyWait';
			}
			
			@sprite .rosterIcon {
				gwt-image: 'rosterIcon';
			}
			
			@sprite .menuIcon {
				gwt-image: 'menuIcon';
			}
			
			@sprite .chatIcon {
				gwt-image: 'chatIcon';
			}
			
			@sprite .chatAddIcon {
				gwt-image: 'chatAddIcon';
			}
			
			@sprite .searchIcon {
				gwt-image: 'searchIcon';
			}

            @sprite .onIcon {
                gwt-image: 'onIcon';
            }

            @sprite .offIcon {
                gwt-image: 'offIcon';
            }
            @sprite .closeIcon {
                gwt-image: 'closeIcon';
            }
            
            @sprite .buddyAddIcon {
                gwt-image: 'buddyAddIcon';
            }
            
            @sprite .consoleIcon {
                gwt-image: 'consoleIcon';
            }
            
            @sprite .loadingIcon {
                gwt-image: 'loadingIcon';
            }
            
            @sprite .groupChatIcon {
                gwt-image: 'groupChatIcon';
            }
		</ui:style>

