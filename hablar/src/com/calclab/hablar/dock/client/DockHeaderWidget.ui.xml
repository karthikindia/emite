<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .beside {
    	float: left;
    }
  </ui:style>
  <ui:image field='closeIcon' src='close.png' />
  <g:FocusPanel ui:field="self">
    <g:FlowPanel addStyleNames='hablar-DockHeaderWidget hablar-Header hablar-lightBackground hablar-partialLightBordered'
      ui:field="flow">
      <g:Image addStyleNames="icon {style.beside}" ui:field="icon" />
      <g:Label addStyleNames="{style.beside} title" ui:field="title">Title</g:Label>
      <g:Image addStyleNames="close {style.beside}" ui:field="close" />
    </g:FlowPanel>
  </g:FocusPanel>
</ui:UiBinder>