<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="ChatPage.css" />
		
	<ui:style field="icons" type="com.calclab.hablar.client.chat.ChatPage.Icons">
		@sprite .chatIcon {
			gwt-image: 'buddy';
		}
		@sprite .chatIconOn {
			gwt-image: 'buddyOn';
		}
		@sprite .chatIconOff {
			gwt-image: 'buddyOff';
		}
		@sprite .chatIconDnd {
			gwt-image: 'buddyDnd';
		}
		@sprite .chatIconWait {
			gwt-image: 'buddyWait';
		}
	</ui:style>

	<ui:image field="buddy" src="../buddy-small.png"></ui:image>
	<ui:image field="buddyOn" src="../buddy-small-on.png"></ui:image>
	<ui:image field="buddyOff" src="../buddy-small-off.png"></ui:image>
	<ui:image field="buddyDnd" src="../buddy-small-dnd.png"></ui:image>
	<ui:image field="buddyWait" src="../buddy-small-wait.png"></ui:image>

	<g:DockLayoutPanel unit='PX' styleName="{style.chat}">
		<g:center>
			<g:FlowPanel styleName="{style.list}" ui:field="list"></g:FlowPanel>
		</g:center>
		<g:south size="60">
			<g:HTMLPanel styleName="{style.talker}">
				<g:TextArea styleName="{style.talkBox}" ui:field="talkBox"></g:TextArea>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 