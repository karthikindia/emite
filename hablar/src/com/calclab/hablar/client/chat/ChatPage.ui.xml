<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="ChatPage.css" />
		
	<ui:style field="icons" type="com.calclab.hablar.client.chat.ChatPage.Icons">
		@sprite .chatIcon {
			gwt-image: 'chatBasic';
		}
	</ui:style>

	<ui:image field='chatBasic' src='chat-basic.gif' />


	<g:DockLayoutPanel unit='PX' styleName="{style.chat}">
		<g:center>
			<g:FlowPanel styleName="{style.list}" ui:field="list"></g:FlowPanel>
		</g:center>
		<g:south size="60">
			<g:HTMLPanel styleName="{style.talker}">
				<g:TextArea styleName="{style.talkBox}" ui:field="talkBox"></g:TextArea>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 