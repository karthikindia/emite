<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.panel {
			background-color: #BBBBBB;
		}
		
		.data {
			width: 100%;
			overflow: hidden;
		}
		
		.nick {
			color: white;
			display: block;
			float: left;
			margin: 0 5px 0 3px;
		}
		
		.status {
			display: block; 
			float: left;
			cursor: pointer;
		}
		
		.statusBox {
			display: block;
			float: left;
			border: 0;
			color: gray;
			margin: 0;
			padding: 1px;
			background-color: white;
		}
		
		.icon {
			width: 16px;
			height: 16px;
			cursor: pointer;
		}
		
	</ui:style>

	<g:LayoutPanel styleName="{style.panel}">
		<g:layer left="2px" top="2px" width="20px" bottom="0">
			<g:Label ui:field="btnState" styleName="{style.icon}"></g:Label>
		</g:layer>
		<g:layer left="20px" top="2px" right="20px" bottom="0">
			<g:FlowPanel styleName="{style.data}">
				<g:Label ui:field="nick" styleName="{style.nick}"></g:Label>
				<g:Label ui:field="status" styleName="{style.status}"></g:Label>
				<g:TextBox ui:field="statusBox" styleName="{style.statusBox}"></g:TextBox>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 