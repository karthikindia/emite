<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="RosterWidget.css" />
		
	<ui:style field="icons"
		type="com.calclab.hablar.client.roster.RosterPage.Icons">
			.action {
				display: block;
				float: left;
				width: 20px;
				height: 16px;
				margin: 2px 5px 0 3px;
				cursor: pointer;
			}
			
			@sprite .rosterIcon {
				gwt-image: 'rosterIcon';
			}
			
			@sprite .addBuddyIcon {
				gwt-image: 'addBuddyIcon';
			}
		</ui:style>

	<ui:image field="usersIcon" src="userf.gif"></ui:image>
	<ui:image field="rosterIcon" src="roster.png"></ui:image>
	<ui:image field="addBuddyIcon" src="user_add.png"></ui:image>

	<g:LayoutPanel ui:field="roster" styleName="{style.roster}">
		<!--  Actions -->
		<g:layer left="0" top="0" width="100%" height="20px">
			<g:FlowPanel ui:field="actions" styleName="{style.panel}">
				<g:Label ui:field="btnAddBuddy" styleName="{icons.action} {icons.addBuddyIcon}"></g:Label>
			</g:FlowPanel>
		</g:layer>
		<!-- Question -->
		<g:layer left="0" top="20px" width="100%" height="0px">
			<g:HTMLPanel styleName="{style.panel} {style.questionPanel}"
				ui:field="questionPanel">
				<div>
					<g:Label ui:field="questionBody" styleName="{style.questionBody}">This is the body
						of the question. Two lines will be more significative</g:Label>
					<div style="{style.actions}">
						<g:Button ui:field="btnYes" styleName="{style.action}">Yes</g:Button>
						<g:Button ui:field="btnNo" styleName="{style.action}">No</g:Button>
					</div>
				</div>
			</g:HTMLPanel>
		</g:layer>
		<!-- Results -->
		<g:layer left="0" top="20px" width="100%" bottom="0px">
			<g:FlowPanel styleName="{style.list}" ui:field="list"></g:FlowPanel>
		</g:layer>
		<!-- Add buddy panel -->
		<g:layer left="0" bottom="20px" width="100%" height="0px">
			<g:HTMLPanel ui:field="addBuddyPanel" styleName="{style.panel}">
				<g:TextBox ui:field="addBuddyBox" styleName="{style.textBox}"></g:TextBox>
			</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 