<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
 
	<g:LayoutPanel ui:field="roster" styleName="roster-panel {style.roster}">
		<!--  Actions -->
		<g:layer left="0" top="0" width="100%" height="20px">
			<g:FlowPanel ui:field="actions" styleName="{style.actionsPanel}">
			</g:FlowPanel>
		</g:layer>
		<!-- Results -->
		<g:layer left="0" top="20px" width="100%" bottom="0px">
			<g:FlowPanel styleName="{style.list}" ui:field="list"></g:FlowPanel>
		</g:layer>
		<!-- Anactive -->
		<g:layer left="0" top="20px" width="100%" height="0px">
			<g:FlowPanel styleName="roster-disabled {style.disabledPanel}" ui:field="disabledPanel">
			<g:Label styleName="{style.disabledMessage}">Not logged in.</g:Label>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
    <ui:image field="rosterIcon" src="roster.png"></ui:image>

    <ui:style field="icons"
        type="com.calclab.hablar.client.roster.RosterPage.Icons">
            .action {
                display: block;
                float: left;
                width: 20px;
                height: 16px;
                margin: 2px 5px 0 3px;
                cursor: pointer;
            }
            
            @sprite .rosterIcon {
                gwt-image: 'rosterIcon';
            }
        </ui:style>


	<ui:style>
		.roster {
			border: 3px solid #E9E9E9;
		}
		
		.list {
			width: 100%;
			overflow: hidden;
			background-color: white;
			border-left: 1px solid #BBBBBB;
		}
		
		.actionsPanel {
			width: 100%;
			overflow: hidden;
			background-color: #E9E9E9;
			border-bottom: 1px solid #BBBBBB;
		}
		
		.action {
			float: left;
			margin-right: 6px;
		}
		
		.disabledPanel {
			position: relative;
			left: 0;
			top: 0;
			right: 0;
			bottom: 0;
			display: block;
			background-color: #BBBBBB;
			border-left: 1px solid #8C8C8C;
			border-top: 1px solid #8C8C8C;
		}
		
		.disabledMessage {
			display: block;
			text-align: center;
			width: 100%;
			padding-top: 2em;
			color: #E9E9E9;
		}
	</ui:style>
</ui:UiBinder> 