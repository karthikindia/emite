<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="com.calclab.hablar.client.roster.RosterItemWidget.Icons">
		.item {
			display: block;
			width: 100%;
			overflow: hidden;
			padding: 5px 3px 0 3px;
			border-bottom: 1px solid #E9E9E9;
			height: 20px;
		}
		
		.icon {
			display: block;
			float: left;
			margin: 2px 5px 0 2px;
		}
		
		.name {
			display: block;
			float: left;
			cursor: pointer;
		}
		
		.status {
			color: gray;
		}
		
		@sprite .buddyIcon {
			gwt-image: 'buddy';
		}
		@sprite .buddyIconOn {
			gwt-image: 'buddyOn';
		}
		@sprite .buddyIconOff {
			gwt-image: 'buddyOff';
		}
		@sprite .buddyIconDnd {
			gwt-image: 'buddyDnd';
		}
		@sprite .buddyIconWait {
			gwt-image: 'buddyWait';
		}
	</ui:style>

	<ui:image field="buddy" src="buddy-small.png"></ui:image>
	<ui:image field="buddyOn" src="buddy-small-on.png"></ui:image>
	<ui:image field="buddyOff" src="buddy-small-off.png"></ui:image>
	<ui:image field="buddyDnd" src="buddy-small-dnd.png"></ui:image>
	<ui:image field="buddyWait" src="buddy-small-wait.png"></ui:image>
	
	<g:FlowPanel styleName="{style.item}">
		<g:Label styleName="{style.icon}" ui:field="icon"></g:Label>
		<g:Label styleName="{style.name}" ui:field="name" />
		<g:Label styleName="{style.status}" ui:field="status" />
	</g:FlowPanel>
</ui:UiBinder> 