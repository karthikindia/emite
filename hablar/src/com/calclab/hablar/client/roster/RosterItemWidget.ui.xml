<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="com.calclab.hablar.client.roster.RosterItemIcons">
		.item {
			display: block;
			width: 100%;
			overflow: hidden;
			padding: 5px 0px 0 0px;
			border-bottom: 1px solid #E9E9E9;
		}
		
		.user {
			width: 100%;
			overflow: hidden;
		}
		
		.icon {
			display: block;
			float: left;
			margin: 2px 5px 0 2px;
		}
		
		.name {
			display: block;
			float: left;
			cursor: pointer;
			margin-right: 5px;
		}
		
		.jid {
			float: left;
			display: block;
			color: #BBB;
		}
		
		.status {
			display: block;
			margin-left: 24px;
			color: gray;
		}
		
		@sprite .menuTrigger {
			gwt-image: 'menuIcon';
			display: block;
			float: right;
			margin-right: 3px;
		}
		
		@sprite .buddyIcon {
			gwt-image: 'buddy';
		}
		
		@sprite .buddyIconOn {
			gwt-image: 'buddyOn';
		}
		
		@sprite .buddyIconOff {
			gwt-image: 'buddyOff';
		}
		
		@sprite .buddyIconDnd {
			gwt-image: 'buddyDnd';
		}
		
		@sprite .buddyIconWait {
			gwt-image: 'buddyWait';
		}
	</ui:style>

	<ui:image field="buddy" src="../buddy-small.png"></ui:image>
	<ui:image field="buddyOn" src="../buddy-small-on.png"></ui:image>
	<ui:image field="buddyOff" src="../buddy-small-off.png"></ui:image>
	<ui:image field="buddyDnd" src="../buddy-small-dnd.png"></ui:image>
	<ui:image field="buddyWait" src="../buddy-small-wait.png"></ui:image>
	<ui:image field="menuIcon" src="../menu.png" />

	<g:FlowPanel styleName="{style.item}">
		<g:FlowPanel styleName="{style.user}">
			<g:Label styleName="{style.icon}" ui:field="icon"></g:Label>
			<g:Label styleName="{style.name}" ui:field="name">name-here</g:Label>
			<g:Label styleName="{style.jid}" ui:field="jid">jid</g:Label>
		</g:FlowPanel>
		<g:Label styleName="{style.status}" ui:field="status" />
	</g:FlowPanel>
</ui:UiBinder> 