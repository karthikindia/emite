<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../Hablar.css" field="hablar" />
		
	<ui:style>
		.result {
			padding: 5px 0;
			display: block;
			width: 100%;
			overflow: hidden;
			background-color: white;
			border-bottom: 1px solid #e9e9e9;
		}
		
		.resultName {
			display: block;
			float: left;
			margin: 0 10px;
		}
		
		.addToRoster {
			font-size: 80%;
			color: #BBB;
			cursor: pointer;
		}
	</ui:style>

	<ui:style field="icons">
		@sprite .userAdd {
			gwt-image: 'buddy';
		}
	</ui:style>

	<ui:image field="buddy" src="../buddy-small.png"></ui:image>
	<g:HTMLPanel styleName="{style.result}">
		<span class="{hablar.icon} {icons.userAdd}"></span>
		<g:Label ui:field="name" styleName="{style.resultName}">Result</g:Label>
		<g:Anchor ui:field="addToRoster" styleName="{style.addToRoster}"> add to roster</g:Anchor>
	</g:HTMLPanel>
</ui:UiBinder> 