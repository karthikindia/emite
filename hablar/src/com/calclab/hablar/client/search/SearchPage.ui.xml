<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../Hablar.css" field="hablar" />
		
	<ui:style src="SearchPage.css"
		type="com.calclab.hablar.client.search.SearchPage.Styles" />
			
		<g:LayoutPanel ui:field="self" styleName="{hablar.page}">
		<g:layer left="0" top="0" width="100%" height="0">
			<g:FlowPanel ui:field="messagePanel">
				<g:Label ui:field="message" styleName="{hablar.panel} {style.message}">
				</g:Label>
			</g:FlowPanel>
		</g:layer>
		<g:layer left="3" top="3" right="3" bottom="33">
			<g:ScrollPanel ui:field="scroll">
				<g:FlowPanel styleName="{hablar.contents}" ui:field="results">
				</g:FlowPanel>
			</g:ScrollPanel>
		</g:layer>
		<g:layer left="0" bottom="0" width="100%" height="30">
			<g:FlowPanel styleName="{hablar.panel} {style.panel}">
				<g:TextBox ui:field="term" styleName="{hablar.textBox} {style.unfocus}">Search users...</g:TextBox>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>


</ui:UiBinder> 