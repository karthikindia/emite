<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="../Hablar.css" field="hablar" />
		
	<ui:style type="com.calclab.hablar.client.search.SearchPage.Styles">
		.panel {
			padding: 5px 1% 3px 1%;
		}
		
		.message {
			padding: 3px 1%;
		}
		
		.info {
			color: #BBBBBB;
		}
		
		.alert {
			color: #c00;
		}
		
		.success {
			color: #090;
		}
		
		.unfocus {
			color: #E9E9E9;
		}
		
		.focus {
			color: black;
		}
	</ui:style>

	<g:LayoutPanel ui:field="self" styleName="{hablar.page}">
		<g:layer left="0" top="0" width="100%" height="0">
			<g:FlowPanel ui:field="messagePanel">
				<g:Label ui:field="message" styleName="{hablar.panel} {style.message}">
				</g:Label>
			</g:FlowPanel>
		</g:layer>
		<g:layer left="0" top="0" right="0" bottom="43px">
			<g:ScrollPanel ui:field="scroll" styleName="{hablar.list}">
				<g:FlowPanel styleName="{hablar.contents}" ui:field="results">
				</g:FlowPanel>
			</g:ScrollPanel>
		</g:layer>
		<g:layer left="0" bottom="0" width="100%" height="40px">
			<g:FlowPanel styleName="{hablar.panel} {style.panel}">
				<g:TextBox ui:field="term" styleName="{hablar.textBox} {style.unfocus}">Search users...</g:TextBox>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>

	<ui:image field="searchIcon" src="../search.png"></ui:image>

	<ui:style field="icons"
		type="com.calclab.hablar.client.search.SearchPage.Icons">
			@sprite .searchIcon {
				gwt-image: 'searchIcon';
			}
		</ui:style>

</ui:UiBinder> 