<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="PageWidget.css"
		type="com.calclab.hablar.client.pages.PageHeader.Styles" />
			
		<ui:style field="icons">
			@sprite .close {
				gwt-image: 'closeIcon';
			}
		</ui:style>

	<ui:image field='closeIcon' src='close.png' />


	<g:FlowPanel styleName='hablar-pageHeader {style.header}'
		ui:field="header">
		<g:Label styleName='{style.icon}' ui:field="icon"></g:Label>
		<g:Label styleName="{style.title}" ui:field="title"></g:Label>
		<g:Label styleName='{style.close} {icons.close}' ui:field="close" />
	</g:FlowPanel>
</ui:UiBinder> 