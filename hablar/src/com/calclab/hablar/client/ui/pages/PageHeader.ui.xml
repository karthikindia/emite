<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style field="defaultStyles"
		type="com.calclab.hablar.client.ui.pages.PageHeader.DefaultStyles">
			.open {
				
			}
			
			.closed {
				
			}
			
			.requestFocus {
				
			}
		</ui:style>

	<ui:style field="icons">
		@sprite .close {
			gwt-image: 'closeIcon';
		}
	</ui:style>

	<ui:style>
		.header {
			width: 100%;
			overflow: hidden;
			cursor: pointer;
			/*background-color: #E9E9E9;*/
			background-color: #e9e9e9;
			height: 22px;
			overflow: hidden;
			margin-right: 3px;
		}
		
		.title {
			width: 100%;
			padding-left: 19px;
			margin-right: 15px;
			padding: 3px;
			display: block;
		}
		
		.icon {
			display: block;
			float: left;
			width: 19px;
			margin: 3px 0 0 3px;
		}
		
		.close {
			display: block;
			float: right;
			margin: -17px 5px 0 -22px;
			width: 16px;
			height: 16px;
		}
	</ui:style>


	<ui:image field='closeIcon' src='close.png' />


	<g:FlowPanel styleName='hablar-pageHeader {style.header}'
		ui:field="header">
		<g:Label styleName='{style.icon}' ui:field="icon"></g:Label>
		<g:Label styleName="{style.title}" ui:field="title"></g:Label>
		<g:Label styleName='{style.close} {icons.close}' ui:field="close" />
	</g:FlowPanel>
</ui:UiBinder> 