<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.calclab.hablar.client.ui.state.StatePanel.Icons">
		.panel {
			background-color: #BBBBBB;
		}
		
		.data {
			width: 100%;
			overflow: hidden;
		}
		
		.nick {
			color: white;
			display: block;
			float: left;
		}
		.status {
			display: block; 
			float: left;
			cursor: pointer;
		}
		
		.statusBox {
			display: block;
			float: left;
			border: 1px solid #e9e9e9;
			color: gray;
			background-color: white;
		}
		
		.icon {
			width: 16px;
			height: 16px;
			cursor: pointer;
		}
		
		@sprite .iconOff {
			gwt-image: 'stateOffIcon';
		}
		
		@sprite .iconOn {
			gwt-image: 'stateOnIcon';
		}
		@sprite .iconWait {
			gwt-image: 'stateWaitIcon';
		}
		
		@sprite .iconDnd {
			gwt-image: 'stateDndIcon';
		}
	</ui:style>
	<ui:image field='stateOffIcon' src='../../buddy-small-off.png' />
	<ui:image field='stateOnIcon' src='../../buddy-small-on.png' />
	<ui:image field='stateWaitIcon' src='../../buddy-small-wait.png' />
	<ui:image field='stateDndIcon' src='../../buddy-small-dnd.png' />

	<g:LayoutPanel styleName="{style.panel}">
		<g:layer left="2px" top="2px" width="20px" bottom="0">
			<g:Label ui:field="btnState" styleName="{style.icon}"></g:Label>
		</g:layer>
		<g:layer left="20px" top="2px" right="20px" bottom="0">
			<g:FlowPanel styleName="{style.data}">
				<g:Label ui:field="nick" styleName="{style.nick}"></g:Label>
				<g:Label ui:field="status" styleName="{style.status}"></g:Label>
				<g:TextBox ui:field="statusBox" styleName="{style.statusBox}"></g:TextBox>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 