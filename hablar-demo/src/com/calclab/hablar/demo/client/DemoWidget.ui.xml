<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:hablar="urn:import:com.calclab.hablar.basic.client.ui">
	<ui:style>
		
	</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="hablarDemo-Panel">
		<g:north size='40'>
			<g:HTML>
				<h2>Hablar GWT Integration Demo</h2>
			</g:HTML>
		</g:north>

		<g:east size='300'>
			<hablar:HablarWidget layout="accordion" ui:field="hablar" styleName="hablar"></hablar:HablarWidget>
		</g:east>

		<g:center>
			<g:HTMLPanel>
				<div class="form">
					<p>
						<label>User:</label>
						<g:TextBox ui:field="userName">test1@localhost</g:TextBox>
					</p>
					<p>
						<label>Password:</label>
						<g:PasswordTextBox ui:field="password">test1</g:PasswordTextBox>
					</p>
					<p>
						<g:Label ui:field="state"></g:Label>
					</p>
					<p>
						<g:Button ui:field="login">Login</g:Button>
						<g:Button ui:field="logout">Logout</g:Button>
					</p>
				</div>
				<div class="output">
				
				</div>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 